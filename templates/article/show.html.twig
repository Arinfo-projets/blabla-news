{% extends 'base.html.twig' %}

{% block title %}{{article.title}}{% endblock %}

{% block body %}
<div class="my-5">
    <div class="container">
        {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-outline-primary mb-3" href="{{path('app_article_edit', {id:article.id})}}">Modifier</a>
        {% endif %}
        <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-inner">
                {% for image in article.images %}
                <div class="carousel-item {% if loop.first %} active{% endif %}">
                    <img src="{{asset('assets/images/' ~ image.path )}}" class="d-block w-100" alt="...">
                </div>
                {%endfor%}
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <div class="article-content mt-3">
            <p class="fw-bold text-secondary">Publi√© le : {{article.createdAt | date('M d Y') }} par {{article.user.firstName}} {{article.user.lastName}} </p>
            <h1>{{article.title}}</h1>
             <P>
                {{article.content | raw }}
             </P>
        </div>

    </div>
</div>
<style>
    .carousel-inner {
        height: 500px;
    }

    .carousel-item {
        height: 100%;
    }

    .carousel-inner img {
        object-fit: cover;
        object-position: center;
        height: 100%;
    }

    @media screen and (max-width: 750px) {
        .carousel-inner {
            height: 300px;
        }
    }

    @media screen and (max-width: 500px) {
        .carousel-inner {
            height: 250px;
        }
    }
</style>

{%endblock%}